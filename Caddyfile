# Frontend (SPA) + API Reverse Proxy

:80 {
    # API: Strip /api prefix and forward to backend
    handle_path /api/* {
        reverse_proxy api:3000
    }

    # Frontend: Serve static files for everything else
    handle {
        root * /srv
        encode gzip
        try_files {path} {path}/ /index.html
        file_server
    }
}
